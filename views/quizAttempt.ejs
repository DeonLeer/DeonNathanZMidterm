<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home Page</title>
    <!-- Bootstrap CSS-->
    <link rel="stylesheet"
    href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
    integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
    crossorigin="anonymous">


    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
    <link rel="stylesheet" href="/styles/layout.css" type="text/css" />

    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>

    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <script type="text/javascript" src="/scripts/app.js"></script>

  </head>

  <body>
    <!--Fixed header from the _partials/header-->
    <%- include partials/_header %>


    <div id="quiz-attempt-container">
      <h1 id="quiz-attempt-message">Attempt Quiz</h1>
      <form action="/quiz/:quizurl/submit" method="POST" id="questionform">
      <%= console.log('before for loop', questions[0]) %>
        <input type="hidden" id="quiz_id" name="quiz_id" value=<%= parseInt(questions[0].quiz_id) %> >
      <% let i = 0 %>
      <% for(let question of questions) { %>
      <section id="quiz-attempt">

          <div id="question-container" class="hide">
          <label class="question"> </label>

            <div id="question"><%= question.question %></div>
            <div id="answer-buttons" class="btn-grid">
              <input type="hidden" id="<%=`question_id`%>" name="<%=`question_ids`%>" value=<%= parseInt(questions[i].id) %> >

              <input type="radio" id="<%=`a${i}`%>" name="<%=`answer${i+1}`%>" value='A'>
              <label for="<%=`a${i}`%>"> <%= question.answera %> </label><br>
              <input type="radio" id="<%=`b${i}`%>" name="<%=`answer${i+1}`%>" value='B'>
              <label for="<%=`b${i}`%>"> <%= question.answerb %> </label><br>
              <input type="radio" id="<%=`c${i}`%>" name="<%=`answer${i+1}`%>" value='C'>
              <label for="<%=`c${i}`%>"> <%= question.answerc %> </label><br>
              <input type="radio" id="<%=`d${i}`%>" name= "<%=`answer${i+1}`%>" value='D'>
              <label for="<%=`d${i}`%>"> <%= question.answerd %> </label><br>
            </div>
          </div>

        </section>
        <% i+=1; %>
        <% } %>
        <%= console.log(questions[0]) %>

        <button form="questionform" type="submit" id="submit-btn" class="quizzes">Submit</button>
      </form>
    </div>





    <!--Bootstrap JS-->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

  </body>
</html>
