<header>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <a class="navbar-brand" href="/">QuizApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item active">
          <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/quizzes">View All Quizzes</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/createQuiz">Create a Quiz</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/results">View Your Results</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/myquizzes">View Your Quizzes</a>
        </li>
        <div id="userID">
          <% if (username) {%>
            <h4><%=username%></h4>
            <form class="form-inline" action='/logout' method='POST'>
            <button type="submit" class="btn-primary">ChangeUser</button>
            </form>
            <%} else { %>
          <form class="form-inline" action='/login' method="POST">
            <div class="form-group mb-2">
              <input class="form-control" type="text" name="username" placeholder="Enter your Name" style="width: 300px; margin: 1em">
              <button type="submit" class="btn btn-primary">Submit</button>
            </div>
          </form>
          <% } %>
        </div>

      </ul>
    </div>
  </nav>
</header>
